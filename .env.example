# Portal de Notícias - Template de Variáveis de Ambiente
# Copie este arquivo para .env e configure com seus valores

# Configurações do Banco de Dados
DB_HOST=localhost
DB_NAME=portal_noticias
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Configurações da Aplicação
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/portal-noticias
APP_NAME="Portal de Notícias"

# Configurações de Segurança
JWT_SECRET=sua-chave-secreta-jwt-muito-segura-aqui
ENCRYPTION_KEY=sua-chave-de-criptografia-muito-segura-aqui
SESSION_SECRET=sua-chave-de-sessao-muito-segura-aqui

# Configurações de Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-app-gmail
SMTP_ENCRYPTION=tls
FROM_EMAIL=noreply@portalnoticias.com
FROM_NAME="Portal de Notícias"

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=backend/uploads/
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv
ALLOWED_AUDIO_TYPES=mp3,wav,ogg

# Configurações de Cache
CACHE_DRIVER=file
CACHE_DURATION=3600

# Configurações de Log
LOG_LEVEL=info
LOG_PATH=backend/logs/

# Configurações de API Externa (opcional)
# GOOGLE_ANALYTICS_ID=
# RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=

# Configurações de Redes Sociais
# Facebook
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=

# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:8001/controllers/SocialController.php?action=callback&provider=google

# Twitter API v2
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_BEARER_TOKEN=
# TWITTER_CLIENT_ID=
# TWITTER_CLIENT_SECRET=

# LinkedIn
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=
# LINKEDIN_REDIRECT_URI=http://localhost:8001/controllers/SocialController.php?action=callback&provider=linkedin

# Instagram (via Facebook)
# INSTAGRAM_APP_ID=
# INSTAGRAM_APP_SECRET=

# WhatsApp Business API (opcional)
# WHATSAPP_TOKEN=
# WHATSAPP_PHONE_ID=

# Configurações de Desenvolvimento
DEV_MODE=true
SHOW_ERRORS=true
DEBUG_QUERIES=false